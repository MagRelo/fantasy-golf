h3.text-primary Leaderboard

span.h3  {{'tournament name'}}
    small.text-muted {{'location'}}

div
    div.btn-group.pull-right
        button.btn.btn-sm.btn-primary(data-ng-click="scoringStyle = 'sc'", data-ng-class="{active: scoringStyle == 'sc'}") strokes
        button.btn.btn-sm.btn-primary(data-ng-click="scoringStyle = 'stable'", data-ng-class="{active: scoringStyle == 'stable'}") stableford
        button.btn.btn-sm.btn-primary(data-ng-click="scoringStyle = 'modstable'", data-ng-class="{active: scoringStyle == 'modstable'}") mod stable

table.table
    thead.text-muted
        th hole
        th(data-ng-repeat='hole in [0,1,2]') 'repeater'
        th tot
    tbody
        tr(data-ng-repeat='round in player.rounds')
            td.text-muted round {{$index + 1}}
            td(data-ng-repeat='hole in [0,1,2]', data-ng-class="{'positive': (hole.modstable > 0), 'negative': (hole.modstable < 0)}")
                span(data-ng-show="scoringStyle == 'sc'") {{hole.sc}}
                span(data-ng-show="scoringStyle == 'stable'") {{hole.stable}}
                span(data-ng-show="scoringStyle == 'modstable'") {{hole.modstable}}
            td
                span(data-ng-show="scoringStyle == 'sc'") {{round.sc}}
                span(data-ng-show="scoringStyle == 'stable'") {{round.stable}}
                span(data-ng-show="scoringStyle == 'modstable'") {{round.modstable}}