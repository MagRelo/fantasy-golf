div.row(data-ng-controller="TeamCtrl")

    .col-sm-6
        h3.text-primary My Team

        .well

            form.form-horizontal(role='form', name='TeamForm')
                .form-group
                    .col-sm-12
                        label.control-label(for='teamName') Team Name
                        input.form-control(type='text', name='teamName', required='required', data-ng-model='team.teamName')

                    .col-sm-12
                        label.control-label(for='ownerName') Owner Name
                        input.form-control(type='text', name='ownerName', required='required', data-ng-model='team.ownerName')

                .form-group(data-ng-show='TeamForm.$dirty')
                    //buttons
                    div.text-center
                        button.btn.btn-success.btn-sm(data-ng-click="saveTeam(team)") Save Changes
                        h5.text-success(data-ng-show='updated && TeamForm.$pristine') All changes saved &#x2713;
            //.clearfix

            table.table.table-responsive()
                thead.text-muted
                    th Name
                    th drop
                tbody
                    tr(data-ng-repeat="player in field | filter: {active: true}")
                        td
                            h5 {{player.name.last}}, {{player.name.first}}

                        td.text-center
                            a.btn.btn-danger.btn-sm(data-ng-click="dropPlayer(player._id)") drop

                    tr(data-ng-repeat="player in emptyPlayerSlots")
                        td(colspan="4")
                            h5
                                em.text-muted add another golfer from the list below...


    .col-sm-6

        h3.text-primary The Feild


        //search
        div
            div.input-group
                label.input-group-addon.text-primary search
                input.form-control(type="text", data-ng-model="playerFilter")

        div
            //all leagues table
            table.table.table-responsive
                thead.text-muted
                    th Name
                    th add
                tbody
                    tr(data-ng-repeat="player in field | filter: {active: false} | filter:playerFilter | orderBy: 'name.last' ")
                        td
                            h5 {{player.name.last}}, {{player.name.first}}
                        td.text-center
                            a.btn.btn-success.btn-sm(data-ng-click="addPlayer(player._id)", data-ng-disabled="addPlayerDisabled") add







