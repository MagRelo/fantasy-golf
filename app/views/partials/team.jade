div(ng-include='\'partials/navbar\'')

h3.text-primary My Team
div.well

    form(role='form', name='TeamForm', data-ng-submit='submitTeam(Team)')
        legend Team Settings
        .form-group
            label.control-label(for='1') Owner Name
            input#1.form-control(type='text', name='1_Text', required='required', data-ng-model='Team.Owner_Name')
        .form-group
            label.control-label(for='2') Team Name
            input#2.form-control(type='text', name='2_Text', required='required', data-ng-model='Team.Team_Name')

        legend Select Players
        .well.well-lg
            .form-group
                label.control-label(for='3') Player 1
                select#3.form-control(name='3_Dropdown_List', required='required', data-ng-model='Team.Player_1')
                    option(value='option 1') option 1
                    option(value='option 2') option 2
                    option(value='option 3') option 3
            .form-group
                label.control-label(for='4') Player 2
                select#4.form-control(name='4_Dropdown_List', required='required', data-ng-model='Team.Player_2')
                    option(value='option 1') option 1
                    option(value='option 2') option 2
                    option(value='option 3') option 3
            .form-group
                label.control-label(for='5') Player 3
                select#5.form-control(name='5_Dropdown_List', required='required', data-ng-model='Team.Player_3')
                    option(value='option 1') option 1
                    option(value='option 2') option 2
                    option(value='option 3') option 3
            .form-group
                label.control-label(for='6') Player 4
                select#6.form-control(name='6_Dropdown_List', required='required', data-ng-model='Team.Player_4')
                    option(value='option 1') option 1
                    option(value='option 2') option 2
                    option(value='option 3') option 3

        button.btn.btn-lg.btn-primary.pull-right(type='submit') Save

    .clearfix


h3.text-primary My Account
.well
    form.form(name='form', ng-submit='changePassword(form)', novalidate='')
        legend Change password
        .form-group
            label Current Password
            input.form-control(type='password', name='password', ng-model='user.oldPassword', mongoose-error='')
            p.help-block(ng-show='form.password.$error.mongoose')
                | {{ errors.other }}

        .form-group
            label New Password
            input.form-control(type='password', name='newPassword', ng-model='user.newPassword', ng-minlength='3', required='')
            p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)')
                | Password must be at least 3 characters.

        p.help-block  {{ message }}

        button.btn.btn-lg.btn-primary(type='submit') Save changes